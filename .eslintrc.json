{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prefer-arrow-callback": "off",
        "prettier/prettier": ["error", {
            "singleQuote": true,
            "parser": "flow",
            "tabWidth": 4,
            "trailingComma": "all"
        }]
    },
    "env": {
        "es6": true,
        "browser": true
    }
}